  <script>
    const SHEET_ID = "1YTMNBLzRi5p-uGSPba2FXsoxMeIWyPif";
    const BD_URL = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/gviz/tq?tqx=out:json&sheet=BD`;

    let bd = [];

    fetch(BD_URL)
      .then(res => res.text())
      .then(text => {
        const json = JSON.parse(text.substring(47).slice(0, -2));
        bd = json.table.rows.map(r => ({
          descricao: r.c[0]?.v,
          categoria: r.c[1]?.v,
          cal: r.c[2]?.v
        }));

        carregarCategorias();
      });

    function carregarCategorias() {
      const categorias = [...new Set(bd.map(i => i.categoria))];
      const catSelect = document.getElementById("categoria");
      catSelect.innerHTML = "";
      categorias.forEach(c => {
        const o = document.createElement("option");
        o.text = c;
        catSelect.add(o);
      });
      catSelect.onchange = carregarAlimentos;
      carregarAlimentos();
    }

    function carregarAlimentos() {
      const cat = document.getElementById("categoria").value;
      const aliSelect = document.getElementById("alimento");
      aliSelect.innerHTML = "";
      bd.filter(i => i.categoria === cat).forEach(a => {
        const o = document.createElement("option");
        o.text = a.descricao;
        aliSelect.add(o);
      });
    }

    function salvar() {
      alert("Consumo registrado localmente ‚úÖ\n(No pr√≥ximo passo ligamos ao hist√≥rico real)");
    }

    document.getElementById("data").valueAsDate = new Date();
  </script>
